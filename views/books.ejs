<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Books</h1>
    <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        <% books.forEach(book => { %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td>
                <a href="/book/<%= book.id %>">View</a>
                <a href="/update/<%= book.id %>">Edit</a>
                <a href="/delete/<%= book.id %>" style="color: red;">Delete</a>
            </td>
        </tr>
        <% }) %>
    </table>
    <a href="/create" class="btn">Create New Book</a>
</body>
</html>
